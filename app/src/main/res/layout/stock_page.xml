<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/menu_button"
            android:layout_width="35dp"
            android:layout_height="29dp"
            android:layout_marginRight="120dp"
            android:background="@drawable/ic_menu"/>

        <TextView
            android:id="@+id/stock_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/albertsans_semibold"
            android:text="@string/stock_title"
            android:textColor="@color/dark_blue"
            android:layout_marginRight="75dp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/notification_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_notif"/>

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profile"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_profile"/>
    </LinearLayout>
    <!-- Résumé -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stock_summary_title"
        android:textSize="20sp"
        android:fontFamily="@font/albertsans_medium"
        android:textColor="@color/dark_blue"
        android:layout_marginStart="30dp"/>

        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/resume_back"/>

        <EditText
            android:id="@+id/search_input"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/search_rounded"
            android:hint="Rechercher..."
            android:textColor="@color/grey"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="10dp"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="10dp"/>

</LinearLayout>